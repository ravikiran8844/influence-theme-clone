{% schema %}
  {
    "name": "Announcement bar",
    "class": "announcment_bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "announcment",
        "label": "Show announcement bar",
        "default": true
      },
      {
        "type": "range",
        "id": "announcment_time",
        "label": "Announcement time",
        "default": 5,
        "min": 0,
        "max": 8
      },
      {
        "type": "checkbox",
        "id": "arrows",
        "label": "Show arrows",
        "default": true
      },
      {
        "type": "header",
        "content": "COLOR SCHEME"
      }, {
        "type": "select",
        "id": "color_scheme",
        "label": "Color scheme",
        "options": [
          {
            "value": "general",
            "label": "General"
          }, {
            "value": "accent1",
            "label": "Accent 1"
          }, {
            "value": "accent2",
            "label": "Accent 2"
          }, {
            "value": "accent3",
            "label": "Accent 3"
          }
        ],
        "default": "accent1"
      }, {
        "type": "header",
        "content": "THEME SETTINGS"
      }, {
        "type": "select",
        "id": "size",
        "label": "Size",
        "options": [
          {
            "value": "large",
            "label": "Large"
          }, {
            "value": "medium",
            "label": "Medium"
          }, {
            "value": "small",
            "label": "Small"
          }
        ],
        "default": "medium"
      }
    ],
    "blocks": [
      {
        "name": "Announcement",
        "type": "announcement",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "PROMOTE DISCOUNT SAVINGS"
          }, {
            "type": "product",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Announcement bar"

      }
    ]
  }
{% endschema %}