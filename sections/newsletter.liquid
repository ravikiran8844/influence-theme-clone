{% if section.settings.sub_heading != blank and section.settings.heading != blank %}
  <div class="flex flex-column flex-column align-center justify-center news-letter__{{section.id}} {{section.settings.text_alignment}}">
    <div class="text-color{{section.id}}">
      <h3 class="mb-15">{{ section.settings.sub_heading }}</h3>
      <h2 class="mb-20">{{ section.settings.heading }}</h2>
      <form>
        <div class="flex align-center mb-20 justify-center">
          <input type="email">
          <button class="button button--primary btn{{section.id}}" type="submit">Subscribe</button>
        </div>
      </form>
    </div>
  </div>
{% endif %}

{% style %}

  .news-letter__{{ section.id}}{
    text-transform: uppercase;
    height: 434px;
    width: 100vw;
    color: #FFFFFF;
    padding: 15%;
    background-color: {{ section.settings.background_color}}
  }
  input {
    min-height: 4.8rem;
    padding: 0 3rem;

  }
{% endstyle %}

{% schema %}
  {
    "name": "Newsletter",
    "class": "newsletter",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      }, {
        "type": "text",
        "id": "sub_heading",
        "label": "Subheading",
        "default": "Signup now"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Get the newsletter"
      }, {
        "type": "select",
        "id": "text_alignment",
        "label": "Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }
    ],
    "presets": [
      {
        "name": "Newsletter"
      }
    ]
  }
{% endschema %}